{
	"name": "Sonification",
	"description": "This extension plays tones based on site HTML.",
	"manifest_version": 2,
	"version": "1.0",
	"icons": {
		"48": "icons/sound-48.png"
	},
	"content_scripts": [{
		"matches": ["*://*.ime.usp.br/*"],
		"js": ["definitions.js", "Tone.js", "synthesizers.js"],
		"css": ["style.css"]
	}],
	"permissions": [
		"activeTab"
	],
	"browser_action": {
		"default_icon": "icons/sound-32.png",
		"default_title": "Sonification",
		"default_popup": "popup/sonification.html"	
	}
}

